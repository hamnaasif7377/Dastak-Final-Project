<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chevron_left" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/pfp"
            app:civ_border_width="1dp"
            app:civ_border_color="#E0E0E0" />

    </RelativeLayout>

    <!-- Content Section: Split Screen for Two Cards -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="12dp">

        <!-- LISTING CARD (Top Half) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- LEFT SIDE: Inline Date Picker -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select date"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="@font/inika_regular" />

                    <DatePicker
                        android:id="@+id/datepicker1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:datePickerMode="spinner"
                        android:calendarViewShown="false"
                        android:spinnersShown="true" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp" />

                <!-- RIGHT SIDE: Upload + Item Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Upload Photo Box -->
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/input_border_purple"
                     >
                     <ImageView
                         android:id="@+id/uploadListing"
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:layout_centerInParent="true"
                         android:src="@drawable/grid_icon" />
                 </RelativeLayout>

                 <TextView
                     android:text="Upload photo"
                     android:layout_marginTop="6dp"
                     android:textColor="#666666"
                     android:textSize="12sp"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"/>

                    <EditText
                        android:id="@+id/itemname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Name of Item"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="@font/inika_regular" />

                    <EditText
                        android:id="@+id/itemquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/inika_regular" />
                    <!-- Button -->
                    <Button
                        android:id="@+id/btnAddItems"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Add Listing"
                        android:background="@drawable/button_purple_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ENGAGEMENT CARD (Bottom Half) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- LEFT SIDE: Inline Date Picker -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select date"
                        android:textSize="12sp"
                        android:textColor="#999999" />

                    <DatePicker
                        android:id="@+id/datepicker2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:datePickerMode="spinner"
                        android:calendarViewShown="false"
                        android:spinnersShown="true" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="#E0E0E0" />

                <!-- RIGHT SIDE: Upload + Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Upload Photo -->
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/input_border_purple">

                        <ImageView
                            android:id="@+id/uploadEngagement"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/grid_icon"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload photo"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <EditText
                        android:id="@+id/eventname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Name of Event"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:fontFamily="@font/inika_regular" />

                    <EditText
                        android:id="@+id/eventplace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="PLace of event"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/inika_regular" />

                    <!-- Button -->

                    <Button
                        android:id="@+id/btnAddEngagement"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Add Engagement"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/button_purple_background"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Bottom Purple Bar -->
    <View
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_purple" />

</RelativeLayout>
