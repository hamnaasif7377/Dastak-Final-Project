<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".OpportunityDetailActivity">

    <!-- Top Status Bar -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5B2E5A"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <!-- Signal and carrier -->
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mobilesignal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" MS "
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wifi" />
        </LinearLayout>

        <!-- Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:41 AM"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Battery -->
        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100% "
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/battery" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBar"
        android:layout_above="@id/bottomBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <!-- Header with Back Button, Title, Menu, and Favorite -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/chevronleft"
                    android:padding="4dp"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:text="Opportunity Detail"
                    android:textSize="20sp"
                    android:textColor="#2B2B2B"
                    android:textStyle="bold" />

                <!-- Favorite Button -->
                <ImageView
                    android:id="@+id/btnFavorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_toStartOf="@id/btnMenu"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_favorite_border"
                    android:padding="4dp"
                    android:contentDescription="Save to favorites" />

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_menu"
                    android:padding="4dp"
                    android:contentDescription="Menu" />
            </RelativeLayout>

            <!-- Detail Card with Blue Border -->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:background="@drawable/detail_card_border">

                    <!-- Event Image -->
                    <ImageView
                        android:id="@+id/eventDetailImage"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/flood_relief"
                        android:layout_margin="8dp"
                        android:contentDescription="Event Image" />

                    <!-- Event Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/eventDetailTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flood Donation Drive"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <!-- Organization -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Organization: "
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/eventDetailOrganization"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Al-Khidmat Foundation"
                                android:textSize="14sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <!-- Location -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location: "
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/eventDetailLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khyber Pakhtunkhwa (KPK), Pakistan"
                                android:textSize="14sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <!-- Date & Time -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="1dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date &amp; Time: "
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/eventDetailDateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 Nov 2025 · 9 AM – 5 PM"
                                android:textSize="14sp"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <!-- Overview -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overview:"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:id="@+id/eventDetailOverview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monsoon floods have displaced thousands across KPK. Join us to collect and pack food, clean water, bedding, and medical supplies for affected families."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="1dp" />

                        <!-- Volunteer Tasks -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volunteer Tasks:"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:id="@+id/eventDetailTasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• Receive and sort donated goods\n• Pack and label relief boxes\n• Assist donors and maintain simple records"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="1dp" />

                        <!-- Bring -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bring:"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:id="@+id/eventDetailBring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• National ID\n• Comfortable clothing &amp; closed shoes\n• Reusable water bottle"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="1dp" />

                        <!-- Meeting Point -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meeting Point:"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:id="@+id/eventDetailMeetingPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Al-Khidmat Relief Center, Peshawar (address shared after sign-up)"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="1dp" />

                        <!-- Contact -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact:"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:id="@+id/eventDetailContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="relief@alkhidmat.org | +92-300-1234567"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Register"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:textStyle="bold"
                android:background="@drawable/button_purple_background"
                android:paddingStart="56dp"
                android:paddingEnd="56dp" />

            <org.osmdroid.views.MapView
                android:id="@+id/eventMapView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"/>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Purple Bar -->
    <View
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:background="#5B2E5A" />

</RelativeLayout>