<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9">

    <!-- Top Status Bar -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5B2E5A"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MS"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:41 AM"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_below="@id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Top bar with back, title, menu -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/chevronleft"
                    android:contentDescription="Back" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Menu" />
            </RelativeLayout>

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/pfp"
                android:scaleType="centerInside"/>

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#5B2E5A"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Name of Volunteer"
                android:textColorHint="#A0A0A0"
                android:background="@drawable/input_border_purple"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="12dp" />
            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="#5B2E5A"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Updated email"
                android:textColorHint="#A0A0A0"
                android:background="@drawable/input_border_purple"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="12dp" />

            <!-- New Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textColor="#5B2E5A"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/usernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="••••••••••••"
                    android:inputType="textPassword"
                    android:textColorHint="#A0A0A0"
                    android:background="@drawable/input_border_purple"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:layout_marginBottom="12dp" />

                <ImageView
                    android:id="@+id/toggleConfirmPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye_off" />
            </RelativeLayout>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textColor="#5B2E5A"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/locationInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Islamabad, Pakistan"
                android:textColorHint="#A0A0A0"
                android:background="@drawable/input_border_purple"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="24dp" />


            <!-- Done Button -->
            <Button
                android:id="@+id/btnDone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:textSize="18sp"
                app:backgroundTint="@null"
                android:background="@drawable/button_purple_background"
                android:paddingVertical="10dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar -->
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#5B2E5A"/>
</RelativeLayout>