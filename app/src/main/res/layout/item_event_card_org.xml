<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Event Image -->
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Event Poster" />

        <!-- Event Details and Actions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Event Info -->
            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flood Donation Drive"
                android:textSize="16sp"
                android:textColor="#2B2B2B"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KPK"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Oct 2025"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/eventParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 participants"
                android:textSize="13sp"
                android:textColor="#5B2E5A"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Edit"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:background="@drawable/button_edit_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Delete"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:background="@drawable/button_delete_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnViewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="View"
                    android:textSize="12sp"
                    android:textColor="#5B2E5A"
                    android:textAllCaps="false"
                    android:background="@drawable/button_view_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>