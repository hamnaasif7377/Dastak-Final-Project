<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Volunteer Profile Image -->
        <ImageView
            android:id="@+id/volunteerImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/image8"
            android:scaleType="centerCrop"
            android:contentDescription="Volunteer Photo" />

        <!-- Remove Button -->
        <Button
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Remove"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/button_purple_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <!-- Volunteer Info Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/volunteerImage"
            android:layout_toStartOf="@id/btnRemove"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/volunteerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer Name"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registered for: Event Name"
                android:textSize="13sp"
                android:textColor="#5B2E5A"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/volunteerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="volunteer@email.com"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>